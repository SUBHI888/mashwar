
<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName"
      dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mashwar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mashwar.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">mashwar</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link text-dark" asp-area="" asp-controller="Place" asp-action="Index">@Localizer["Places"]</a>
                        </li>
                    </ul>
                </div>
                <div>
                    @if (signInManager.IsSignedIn(User))
                    {

                        var user_data = await UserManager.GetUserAsync(User);
                        <span class="text-info" @user_data.UserName></span>
                    }
                </div>
                <div>
     
                @{
                    var currentuiCultere = System.Globalization.CultureInfo.CurrentUICulture.Name;
                }
                @if(currentuiCultere.StartsWith("ar"))
                {
                    <a class="btn btn-info"asp-action="ChangeLanguage"
                       asp-controller="Home"asp-route-culture="en"
                       asp-route-returnurl="@Context.Request.Path">English</a>
                }
                else
                {
                    <a class="btn btn-primary" asp-action="ChangeLanguage"
                       asp-controller="Home"asp-route-culture="ar"
                       asp-route-returnurl="@Context.Request.Path">Arabic</a>
                }
                </div>

                <div>
                    @if (signInManager.IsSignedIn(User))
                    {
                        <a class="btn btn-secondary" asp-action="Logout" asp-controller="User">Logout</a>
                    }
                    else
                    {
                                            <a class="btn btn-dark" asp-action="Login"asp-controller="User">Login</a>

                    }
                   
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - mashwar - <a asp-area="" asp-controller="Home" asp-action="Home"> Home </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
