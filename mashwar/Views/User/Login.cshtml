@{
    ViewData["Title"] = "Login";
}
@model LoginModel

<h2>Login User</h2>

<form asp-action="Login" asp-controller="User" method="post" enctype="multipart/form-data" role="form">
    @Html.AntiForgeryToken()
    <div class="form-group">

        <label asp-for="User_Email">User_Email</label>
        <input asp-for="User_Email" type="email" placeholder="Enter User_Email..." class="form-control" />
        <span asp-validation-for="User_Email" class="text-danger"></span>
    </div>  <br />

    <div class="form-group">
        <label asp-for="User_Password">User_Password</label>
        <input asp-for="User_Password" type="password" placeholder="Enter Password..." class="form-control" />
        <span asp-validation-for="User_Password" class="text-danger"></span>
    </div><br />
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-success">Login</button>
        <a asp-action="Regester" asp-controller="User" class="btn btn-info">Regester</a>
        <a href="/signin-google" class="btn btn-danger">Login with Google</a>

    </div>

</form>