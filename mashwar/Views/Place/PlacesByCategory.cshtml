@model IEnumerable<mashwar.Models.Place>

<h2>@ViewBag.Category in @ViewBag.City</h2>

@if (!Model.Any())
{
    <p>No places found.</p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@item.Place_Image" class="card-img-top" height="200" />
                    <div class="card-body">
                        <h5>@item.Name</h5>
                        <p>@item.Description</p>
                        <p><strong>Rating:</strong> @item.Rating</p>
                        <p><strong>Price Level:</strong> @item.PriceLevel</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
