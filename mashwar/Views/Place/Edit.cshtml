@model mashwar.Models.Place
@{
    ViewData["Title"] = "Edit Place";
}

<h2 class="mb-4">Edit Place</h2>

<form method="post" asp-action="Edit" asp-controller="Place" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PlaceID" />

    <!-- Place Name -->
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Place Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter Place Name..." />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Place Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter Place Description..." />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Location Dropdown -->
    <div class="mb-3">
        <label asp-for="Location" class="form-label">Place Location</label>
        <select asp-for="Location" class="form-select" asp-items="@ViewBag.Cities">
            <option value="">-- Select City --</option>
            <option value="Amman">Amman</option>
            <option value="Zarqa">Zarqa</option>
            <option value="Aqaba">Aqaba</option>
            <option value="Maan">Maan</option>
        </select>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <!-- Category Dropdown -->
    
    <div class="form-group mb-3">
        <label asp-for="CategoryName">Category</label>
        <select asp-for="CategoryName" class="form-select">
            <option value="">-- Select Category --</option>
            <option value="Restaurant">Restaurant</option>
            <option value="Cafe">Cafe</option>
            <option value="Hotel">Hotel</option>
            <option value="Entertainment">Entertainment</option>
            <option value="Shopping">Shopping</option>
            <option value="Tourist">Tourist</option>
        </select>
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <!-- Rating -->
    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Place Rating</label>
        <input asp-for="Rating" type="number" step="0.1" class="form-control" placeholder="Enter Place Rating..." />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <!-- Price Level -->
    <div class="mb-3">
        <label asp-for="PriceLevel" class="form-label">Price Level</label>
        <input asp-for="PriceLevel" class="form-control" placeholder="Enter Price Level..." />
        <span asp-validation-for="PriceLevel" class="text-danger"></span>
    </div>

    <!-- User Dropdown -->
    <div class="form-group mb-3">
        <label asp-for="User_Id">User</label>
        <select asp-for="User_Id" class="form-select" asp-items="@ViewBag.Users">
            <option value="">-- Select User --</option>
        </select>
        <span asp-validation-for="User_Id" class="text-danger"></span>
    </div>


    <!-- Current Image Display & Upload -->
    <div class="mb-3">
        <label class="form-label">Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.Place_Image))
        {
            <img src="@Model.Place_Image" alt="Place Image" class="img-thumbnail mb-2" style="max-width:200px;" />
        }
        <label asp-for="Place_Image" class="form-label">Upload New Image (Optional)</label>
        <input asp-for="Place_Image" type="file" name="File" class="form-control" />
        <span asp-validation-for="Place_Image" class="text-danger"></span>
    </div>

    <!-- Buttons -->
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-warning" onclick="return confirm('هل أنت متأكد من التعديل؟')">Save Changes</button>
        <a asp-action="Index" asp-controller="Place" class="btn btn-secondary">Back</a>
    </div>
</form>
