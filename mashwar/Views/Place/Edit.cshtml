    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PlaceID" />

    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" /><br />

    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control" /><br />

    <label asp-for="Location"></label>
    <input asp-for="Location" class="form-control" /><br />

    <label asp-for="Rating"></label>
    <input asp-for="Rating" type="number" class="form-control" /><br />

    <label asp-for="User_Id">User</label>
    <select asp-for="User_Id" asp-items="@ViewBag.part" class="form-select">
        <option value="">-- Select User --</option>
    </select><br />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

